fish_vi_key_bindings

set --export PATH "/usr/sbin:$PATH"
set --export PATH "$HOME/.cargo/bin:$PATH"

# Git
alias g="git"
alias gs="git status"
alias gcm="git commit -a -m"
alias glo="git log --oneline --all --graph"

# DotNet
# alias dnt="dotnet test"
