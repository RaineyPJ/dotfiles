# Vim
alias vio="vi --cmd 'let g:enableOmniSharp=1'"
set --export EDITOR "vi"

# Grep
alias greppt="grep --color -r --include='*.cs' --exclude-dir='AutoGenerated' $argv"
alias grepcs="grep --color -r --include='*.cs' $argv"

# ls
alias ll="ls -l -h -A --color=auto $argv"
alias ls="ls -A --color=auto"

# >>> conda initialize >>>
